{
  "name": "Download images",
  "version": "0.0.2",
  "description": "Download all images on the page",
  "manifest_version": 3,
  "author": "Youngjin Kwak",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action":{
    "default_popup": "index.html"
  },
  "icons": {
    "48": "128.png",
    "128": "128.png",
    "256": "256.png"
  }
}
